{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "paths": {
      "*": ["../node_modules/yame/src/*"]
    },
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    "app-builds",
    "dist",
    "out",
    "node_modules"
  ]
}
